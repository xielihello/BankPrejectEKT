@{
    ViewData["nvc"] = "裁判员管理";
    ViewBag.Title = "易考通";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row  border-bottom white-bg dashboard-header">
    <h3>裁判员管理</h3>
    <div class="ibox-content">
        <div class="row form-horizontal">

            <div class=" col-lg-12 col-md-12 col-sm-12">
                <label class="col-sm-5 control-label">裁判信息：</label>
                <div class="input-group col-sm-4">
                    <input type="text" placeholder="请输入裁判名称" id="RefereeName" name="RefereeName" class="form-control">
                    <span class="input-group-btn">
                        <button type="button" class="btn  btn-primary" onclick="searchinfo()">搜索</button>
                    </span>
                </div>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="row">
            <div class="pull-right">
                <button onclick="AddInfo()" type="button" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i><span class="bold">新增裁判</span></button>
                <button onclick="BatchAddInfo()" class="btn btn-success btn-sm" type="button"><i class="fa fa-plus"></i><span class="bold">批量新增</span></button>
                <button onclick="del_all()" type="button" class="btn btn-warning btn-sm"><i class="fa fa-trash"></i><span class="bold">删除</span></button>
            </div>
        </div>
        <div class="row m-t-sm table-responsive">

            <table class="table text-center table-bordered ">
                <thead>
                    <tr>
                        <th class="text-center">序号</th>
                        <th class="text-center">
                            <input type="Checkbox" class="i-checks checkbox-all"></th>
                        <th class="text-center">裁判员姓名</th>
                        <th class="text-center">裁判员账号</th>
                        <th class="text-center">裁判员密码</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody class="new_table text-center" id="tablelist">
                </tbody>
            </table>

        </div>

        <!--分页开始-->
        <div class="row text-center" id="PaginatorLibrary">
        </div>
        <!--分页结束-->
    </div>
</div>

<!--新增弹框-->
<div id="Add" style="display: none;" class="form-inline">
    <form name="Addform" id="Addform">

        <div class="col-sm-12">
            <div class="form-horizontal  m-t-sm">
                <label for="firstname" class="col-sm-4 control-label"><span style="color: red;">*</span>裁判员姓名：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="AddName" name="AddName" placeholder="">
                </div>
            </div>
        </div>

        <div class="col-sm-12 text-center">
            <div class="form-horizontal m-t-md ">
                <button type="button" class="btn btn-w-m btn-success" onclick="BtnSubim()">保存</button>&nbsp;
            <button type="button" class="btn btn-w-m btn-white" onclick="FormRest()">关闭</button>
            </div>
        </div>
    </form>
</div>

<!--批量新增-->
<div id="BatchAdd" style="display: none;" class="form-inline">
    <form name="BatchAddform" id="BatchAddform">

        <div class="col-sm-12">
            <div class="form-horizontal  m-t-sm">
                <label for="firstname" class="col-sm-4 control-label"><span style="color: red;">*</span>裁判员数量：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" onkeyup="checkeNum('BatchAddNameNum')" id="BatchAddNameNum" name="BatchAddNameNum" placeholder="">
                </div>
            </div>
        </div>

        <div class="col-sm-12 text-center">
            <div class="form-horizontal m-t-md ">
                <button type="button" class="btn btn-w-m btn-success" onclick="BatchBtnSubim()">保存</button>&nbsp;
            <button type="button" class="btn btn-w-m btn-white" onclick="BatchFormRest()">关闭</button>
            </div>
        </div>
    </form>
</div>

<!--编辑弹框-->
<div id="Edit" style="display: none;" class="form-inline">
    <form name="Editform" id="Editform">

        <div class="col-sm-12">
            <div class="form-horizontal  m-t-sm">
                <label for="firstname" class="col-sm-4 control-label"><span style="color: red;">*</span>裁判员姓名：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="EditName" name="EditName" placeholder="">
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-horizontal  m-t-sm">
                <label for="firstname" class="col-sm-4 control-label"><span style="color: red;">*</span>新密码：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Oldpwd" name="Oldpwd" placeholder="">
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-horizontal  m-t-sm">
                <label for="firstname" class="col-sm-4 control-label"><span style="color: red;">*</span>重复密码：</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Newpwd" name="Newpwd" placeholder="">
                </div>
            </div>
        </div>
        <div class="col-sm-12 text-center">
            <div class="form-horizontal m-t-md ">
                <button type="button" class="btn btn-w-m btn-success" onclick="EditBtnSubim()">保存</button>&nbsp;
            <button type="button" class="btn btn-w-m btn-white" onclick="EditFormRest()">关闭</button>
            </div>
        </div>
    </form>
</div>
<script src="~/Areas/Admin/Scripts/RefereeManagement/index.js"></script>
