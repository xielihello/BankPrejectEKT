@{
    ViewData["nvc"] = "单据试卷管理";
    ViewBag.Title = "典阅智慧财经综合技能竞赛平台";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model System.Data.DataTable

<div class="row  border-bottom white-bg dashboard-header">
    <h3>单据试卷管理</h3>
    @using (Html.BeginForm("TestPaperList", "BillTestPaper", FormMethod.Post, new { name = "myTestPaperlist" }))
    {
        <div class="ibox-content">
            <div class="row form-horizontal">
                <div class="row">
                    @if (ViewData["UserType"].ToString() == "1")
                    {
                        <div class="col-sm-3 m-b-xs">
                            <select class="form-control input-s-sm inline" id="TestAttribute" name="TestAttribute">
                                <option value="0">请选择试卷属性</option>
                                <option value="1">系统试卷</option>
                                <option value="2">教师试卷</option>
                                <option value="3">所有试卷</option>
                            </select>
                        </div>
                    }
                    <div class="col-sm-3 m-b-xs">
                        <input type="text" placeholder="请输入试卷来源" class="form-control" id="PaperSource" name="PaperSource">
                    </div>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" placeholder="请输入试卷名称" class="form-control" id="PaperName" name="PaperName">
                            <span class="input-group-btn">
                                <button type="button" id="query" class="btn btn-primary">搜索</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="row">
                <div class="pull-right">
                    <button type="button" onclick=" window.location.href = '/Admin/BillTestPaper/ManualTestPaper'" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i><span class="bold">手工组卷</span></button>
                    <button type="button" onclick=" window.location.href = '/Admin/BillTestPaper/CapacityTestPaper'" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i><span class="bold">智能组卷</span></button>
                    <button type="button" onclick="Del()" class="btn btn-warning btn-sm"><i class="fa fa-trash"></i><span class="bold">试卷删除</span></button>
                </div>
            </div>
            <div class="row m-t-sm table-responsive">
                <table class="table text-center table-bordered ">
                    <thead>
                        <tr>
                            <th class="text-center">序号</th>
                            <th class="text-center">
                                <input type="Checkbox" class="i-checks checkbox-all"></th>
                            <th class="text-center">试卷名称</th>
                            <th class="text-center">试卷分值</th>
                            <th class="text-center">试卷属性</th>
                            <th class="text-center">试卷来源</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody class="new_table text-center" id="table">
                    </tbody>
                </table>
            </div>

            <!--分页开始-->
            <div class="row text-center" id="PaginatorLibrary">
            </div>
            <!--分页结束-->
        </div>
        <input type="hidden" id="UserType" name="UserType" value="@ViewData["UserType"]" />
        <input type="hidden" id="UserId" name="UserId" value="@ViewData["UserId"]" />
    }
</div>
<script src="~/Areas/Admin/Scripts/BillTestPaper/TestPaperList.js"></script>

