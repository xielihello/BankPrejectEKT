@{
    ViewData["nvc"] = "单据录入成绩";
    ViewBag.Title = "典阅智慧财经综合技能竞赛平台";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row  border-bottom white-bg dashboard-header">
    <h3>单据录入成绩</h3>
    <div class="ibox-content">
        <div class="row form-horizontal">

            @{
                //管理员查询条件
                if (ViewData["UserType"].ToString() == "1")
                {
                <div class="row">
                    <div class="col-sm-3 m-b-xs">
                        <input type="text" placeholder="考试名称" id="E_Name" class="form-control">
                    </div>
                    <div class="col-sm-3 m-b-xs">
                        <select class="form-control input-s-sm inline" id="E_Type">
                            <option value="0">竞赛模式</option>
                            <option value="2">考试模式</option>
                            <option value="1">练习模式</option>
                        </select>
                    </div>


                    <div class="col-sm-3 m-b-xs">
                        <select class="form-control input-s-sm inline" onclick="SelctSchool()" id="SchooId">
                            <option value="0">院校名称</option>

                        </select>
                    </div>
                    <div class="col-sm-3 m-b-xs">
                        <select class="form-control input-s-sm inline" id="TeamId">
                            <option value="0">班级名称</option>

                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3 m-b-xs">
                        <select class="form-control input-s-sm inline" id="P_Kind">
                            <option value="1">试卷属性</option>
                            <option value="1">系统试卷</option>
                            <option value="2">教师试卷</option>
                            <option value="0">所有试卷</option>
                        </select>
                    </div>
                    <div class="col-sm-3 m-b-xs">
                        <input type="text" placeholder="试卷来源" id="P_Custom2" class="form-control">
                    </div>


                    <div class="col-sm-3 m-b-xs">
                        <input type="text" placeholder="学生信息" id="StudentInfo" class="form-control">
                    </div>

                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" placeholder="分数区间 如：60-70" id="ScoreQJ" class="form-control">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-primary" onclick="searchinfo()">搜索</button>
                            </span>
                        </div>
                    </div>
                </div>
                }
                else
                {
                    //教师端查询条件
                <div class="row">
                    <div class="col-sm-3 m-b-xs">
                        <input type="text" placeholder="考试名称" id="E_Name" class="form-control">
                    </div>
                    <div class="col-sm-3 m-b-xs">
                        <select class="form-control input-s-sm inline" id="E_Type">
                            <option value="0">竞赛模式</option>
                            <option value="2">考试模式</option>
                            <option value="1">练习模式</option>
                        </select>
                    </div>


                </div>

                <div class="row">
                    <div class="col-sm-3 m-b-xs">
                        <select class="form-control input-s-sm inline" id="TeamId">
                            <option value="0">班级名称</option>

                        </select>
                    </div>

                    <div class="col-sm-3 m-b-xs">
                        <input type="text" placeholder="学生信息" id="StudentInfo" class="form-control">
                    </div>

                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" placeholder="分数区间 如：60-70" id="ScoreQJ" class="form-control">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-primary" onclick="searchinfo()">搜索</button>
                            </span>
                        </div>
                    </div>
                </div>
                }
            }

        </div>
        <div class="hr-line-dashed"></div>

        <div class="row">
            <div class="pull-right">
                <button onclick="ExportExamResult()" class="btn btn-info btn-sm" type="button"><i class="fa fa-level-down  m-r-xs"></i><span class="bold">成绩导出</span></button>
            </div>
        </div>

        <div class="row m-t-sm table-responsive">
            <table class="table text-center table-bordered ">
                <thead>
                    <tr>
                        @{
                            <th class="text-center">序号</th>
                            <th class="text-center">考试名称</th>
                       
                            //管理员
                            if (ViewData["UserType"].ToString() == "1")
                            {
                            <th class="text-center">试卷属性</th>
                            <th class="text-center">试卷来源</th>
                            }
                      
                            <th class="text-center">考试类型</th>
                            <th class="text-center">学生账号</th>
                            <th class="text-center">学生姓名</th>
                            //管理员
                            if (ViewData["UserType"].ToString() == "1")
                            {
                            <th class="text-center">所属院校</th>
                            }
                            <th class="text-center">所属班级</th>
                            //管理员
                            if (ViewData["UserType"].ToString() == "1")
                            {
                            <th class="text-center">班级教师</th>
                            }
                            <th class="text-center">试卷总分</th>
                            <th class="text-center" onclick="ResultDesc()" style="cursor: pointer;">考试得分↑↓</th>
                            <th class="text-center">提交时间</th>
                            <th class="text-center">操作</th>
                        }
                    </tr>
                </thead>
                <tbody class="new_table text-center" id="tablelist">
                </tbody>
            </table>
        </div>

        <!--分页开始-->
        <div class="row text-center" id="PaginatorLibrary">
        </div>
        <!--分页结束-->

    </div>
</div>
<a id='downFile' href="" style="display: none"><span id='tf'></span></a>
<input type="hidden" id="UserTypeID"  value="@ViewData["UserType"]"/>
<script src="~/Areas/Admin/Scripts/BillExamResult/Index.js"></script>


