@{
    ViewData["nvc"] = "单据题目管理";
    ViewBag.Title = "典阅智慧财经综合技能竞赛平台";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/CSS/bills.css" rel="stylesheet" />
<div class="row  border-bottom white-bg dashboard-header">
    
    <h3>查看题目<span style="float: right; margin-right:40px; margin-top: -14px;">
        <a href="@Url.Action("TopicList", "BillTopic")" id="Topic" class="btn btn-w-m btn-white ">返回</a>
        <a href="@Url.Action("ManualTestPaper", "BillTestPaper")" id="Paper" style="display:none;" class="btn btn-w-m btn-white ">返回</a>
        <a href="#" id="EditPaper" style="display:none;" class="btn btn-w-m btn-white ">返回</a>
    </span></h3>
    <div class="ibox-content">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">课程名称：</label>
                <div class="col-sm-10">
                    <label class="m-t-sm">单据录入</label>
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">题目标题：</label>
                <div class="col-sm-6">
                    <label class="m-t-sm">@ViewData["TopicTitle"] </label>
                </div>
            </div>

            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">试题描述：</label>
                <div class="col-sm-10" id="Content">
                    <label class="m-t-sm">
                        @{
    //转义成html
                @Html.Raw(HttpUtility.HtmlDecode(ViewData["TaskExplan"].ToString()))
                        }
                    </label>
</div>
            </div>

            <div class="hr-line-dashed"></div>

            <div class="box-body">
                <div class="@ViewData["BillStyle"]" id="fombody"></div>

            </div>
        </form>
    </div>
</div>
<script src="~/Areas/Admin/Scripts/BillTopic/LookTopic.js"></script>
